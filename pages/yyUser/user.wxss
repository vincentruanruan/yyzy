.user_top{
text-align: center;
margin: 1.5rem 0;
}
.user .icon{
    width: 100px;
    height: 100px;
    border: 1px solid #f0f0f0;
    border-radius: 50%;
    margin: 0 auto;
    margin-bottom: 0.5rem;
}
.user .name{
  display: block;
}
.list{
  border: 1px solid #f0f0f0;
  border-bottom: none;
}
.list .item{
  position: relative;
  border-bottom: 1px solid #f0f0f0;
  line-height: 64px;
  padding-left: 64px;
  color: #666;
}
.list .item .icon{
  width: 34px;
  height: 34px;
  position: absolute;
  top: 15px;
  left: 15px;
}
.list .item .right{
  position: absolute;
  right: 10px;
  color: #f0f0f0;
  font-weight: 100;
}
.list .item:active{
  background: #f0f0f0;
}